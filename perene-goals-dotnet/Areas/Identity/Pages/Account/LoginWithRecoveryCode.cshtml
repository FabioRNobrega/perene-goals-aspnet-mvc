@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
}

<div class="base-container">
  <div class="card">
    <div  class="card__title">
     <h3 class="title"> @ViewData["Title"]</h3>
    </div>
    <div class="card__content">
        <section>
            <p>
                You have requested to log in with a recovery code. This login will not be remembered until you provide
                an authenticator app code at log in or disable 2FA and log in again.
            </p>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="input-error"></div>
                <div class="input-container">
                    <input asp-for="Input.RecoveryCode" class="input-text" autocomplete="off" />
                    <span asp-validation-for="Input.RecoveryCode" class="input-error"></span>
                </div>
                <button type="submit" class="base-button base-button__light">
                    <div class="base-button__content"> 
                        <label> Sign in </label>
                        <div class="base-button__icon base-button__icon--next"> </div>
                    </div>
                </button>
            </form>
        </section>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}