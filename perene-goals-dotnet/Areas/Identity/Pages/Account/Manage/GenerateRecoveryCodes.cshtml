@page
@model GenerateRecoveryCodesModel
@{
    ViewData["Title"] = "Manager Generate two-factor authentication (2FA) recovery codes";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
    ViewData["InfoTitle"] = "Put these codes in a safe place.";
    ViewData["InfoMessage"] = new List<string> { 
        "If you lose your device and don't have the recovery codes you will lose access to your account.",
        "Generating new recovery codes does not change the keys used in authenticator apps. If you wish to change the key used in an authenticator app you should <a class='link' href='/Identity/Account/Manage/ResetAuthenticator'> reset your authenticator keys.</a>"
        };
}

<h3 class="base-title">@ViewData["Title"]</h3>

<partial name="_StatusMessage" for="StatusMessage" />Disabling 2FA does not change the keys used in authenticator apps. If you wish to change the key used in an authenticator app you should <a class='link' href='/Identity/Account/Manage/ResetAuthenticator'> reset your authenticator keys.</a>

@await Component.InvokeAsync("BaseInfo", new {title = @ViewData["InfoTitle"], message = @ViewData["InfoMessage"], align = "center"})

<form method="post">
    <button type="submit" class="base-button base-button__light">
        <div class="base-button__content"> 
            <label> Generate Recovery Codes </label>
            <div class="base-button__icon base-button__icon--next"> </div>
        </div>
    </button>
</form>

