@page
@model LoginModel

@{
    ViewData["Title"] = "Sign In";
}

<div class="base-container">
  <div class="card">
    <div  class="card__title">
     <h3 class="title"> @ViewData["Title"]</h3>
    </div>
    <div class="card__content">
              <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="input-error"></div>
                <div class="input-container">
                    <input asp-for="Input.Email" class="input-text" autocomplete="username" placeholder="Email" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="input-text_error"></span>
                </div>
                <div class="input-container">
                    <input asp-for="Input.Password" class="input-text" autocomplete="current-password" placeholder="Password" aria-required="true" />
                    <span asp-validation-for="Input.Password"></span>
                </div>
                <div>
                    <div class="input-container">
                        <label asp-for="Input.RememberMe">
                            <input  asp-for="Input.RememberMe"  />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="base-button base-button__light">
                        <div class="base-button__content"> 
                            <label> sign in </label>
                            <div class="base-button__icon base-button__icon--next"> </div>
                        </div>
                    </button>
                </div>
                <div class="card__footer">
                    <p>
                    Our <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link">Register as a new user</a> to start achieving your goals.
                    </p>
                    <a id="forgot-password" asp-page="./ForgotPassword" class="link">Forgot your password?</a>
                </div>
            </form>
        </section>
    </div>
  </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
